@model IEnumerable<OLS.Models.Quiz>

@{
    ViewBag.Title = "Quiz List";
}

<body style="background-color:#D3D3D3">
<h1 style="margin-left:40px;margin-top:40px">Quiz List</h1>

<p>
    
</p>
<table class="table" style="margin-top:30px;margin-left:40px">
    <tr>
        <th>
            @Html.DisplayName("Topic")
        </th>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Created On")
        </th>
        <th>
            @Html.DisplayName("Participated")
        </th>
        <th>
            @Html.DisplayName("Obtained Mark")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.topic_name)
        </td>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.title).ToString(), "ParticipateInQuiz", "Q_A", new { id = item.quiz_id }, new { htmlAttributes = new { @class = "form-control" } })  @*TODO: add parameters properly*@
            @*<a href="#">@Html.DisplayFor(modelItem => item.title)</a>*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.created_on)
        </td>
        <td>
            @if (Convert.ToBoolean(item.participated) == true)
            {
            <img src="/Images/ok.png"  width="24px" style="margin-left:30px" data-answerid="2003">
            }
            else
            {
            <img src="/Images/notok.png" width="24px"style="margin-left:30px" data-answerid="2003">

            }
        </td>

        <td >
            @Html.DisplayFor(modelItem => item.obtained_mark)
        </td>


    </tr>
}

</table>

    </body>
